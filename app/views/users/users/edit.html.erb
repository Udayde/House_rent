<%= form_with model: @user, url: users_user_path, class: 'col-4 m-auto p-2 p-3 bg-info bg-opacity-10 border border-info rounded-end mt-3' do |form| %>

    <div>
        <%=form.label :name %>   
        <%=form.text_field :name, class: 'form-control' %>
    </div>
    <br>

     <div>
        <%=form.label :role %>   
        <%=form.text_field :role, class: 'form-control' %>
    </div>
    <br>

    <div>
        <%=form.label :email %>
        <%=form.text_field :email, class: 'form-control' %>
    </div>


    
    <%= form.submit class: 'btn btn-primary'%>
<% end %>
