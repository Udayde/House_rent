<table class="table">

  <thead>
    <tr>
      <th scope="col">sr.no</th>
      <th scope="col">name</th>
      <th scope="col">email</th>
      <th scope="col">role</th>
      <th scope="col" > Action</th>
    </tr>
  </thead>
  <tbody>
    <%@users.each do|user| %>
        <tr>
          <th scope="row"><%=user.id%></th>
          <td><%=user.name%></td>
          <td><%=user.email %></td>
          <td><%=user.role %></td>
          <td>
          <div class="d-flex justify-content-center">
          <%= link_to 'Delete', users_user_path(user), data:{turbo_method: :delete ,turbo_confirm:'Are you sure'}, class: "btn  btn-danger mx-3" %>
           <%= link_to 'edit', edit_users_user_path(user), class: "btn  btn-primary"%></td>
           </div>
        </tr>
      <% end %>
    
  </tbody>
</table>                                     